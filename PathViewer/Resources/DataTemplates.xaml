<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:path="clr-namespace:PathViewer">
  <!-- This is how WPF associates the view model with the view. -->
  <DataTemplate DataType="{x:Type path:AddOrEditViewModel}">
    <path:AddOrEdit />
  </DataTemplate>
  <DataTemplate DataType="{x:Type path:ScaleOrMoveViewModel}">
    <path:ScaleOrMove />
  </DataTemplate>
</ResourceDictionary>